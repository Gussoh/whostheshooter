<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>image</servlet-name>
        <servlet-class>view.ViewImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>whostheshooter</servlet-name>
        <servlet-class>controller.WhoIsTheShooter</servlet-class>
        <load-on-startup>1</load-on-startup>
        </servlet>
    <servlet>
        <servlet-name>errorPage</servlet-name>
        <jsp-file>/WEB-INF/jspf/error.jspf</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>gamePage</servlet-name>
        <jsp-file>/WEB-INF/jspf/whostheshooter.jspf</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>scorePage</servlet-name>
        <jsp-file>/WEB-INF/jspf/score.jspf</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>gamePageXML</servlet-name>
        <jsp-file>/WEB-INF/jspf/whostheshooter.xml.jspf</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>scorePageXML</servlet-name>
        <jsp-file>/WEB-INF/jspf/score.xml.jspf</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>image</servlet-name>
        <url-pattern>/image</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>whostheshooter</servlet-name>
        <url-pattern>/whostheshooter</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    </web-app>
